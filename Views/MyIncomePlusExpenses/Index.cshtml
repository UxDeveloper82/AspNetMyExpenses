@model IEnumerable<MyExpenses.Models.MyIncomePlusExpenses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Income and Expenses</h1>

<div class="jumbotron">
    <form asp-action="Index">
        <div class-="form-row">
            <div class="form-group">
                <label class="control-label">Month/Year:</label>
            </div>
            <div class="form-group">
                <input type="number" class="form-control text-right" name="month" min="1" max="12" value="@ViewBag.month" />
            </div>
            <div class="form-group">
                <input type="number" class="form-control text-right" autocomplete="off" name="year" value="@ViewBag.year" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<p>
    <a class="btn btn-primary" asp-action="Edit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-primary "asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
